<UserControl x:Class="folder_cacher_net.folder_entry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="128" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600*" />
            <ColumnDefinition Width="72" />
            <ColumnDefinition Width="72" />
            <ColumnDefinition Width="72" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*" />
            <RowDefinition Height="50*" />
        </Grid.RowDefinitions>
        <Rectangle Grid.ColumnSpan="4" Grid.RowSpan="2" Stroke="Black"/>
        <TextBox x:Name="txt_Path" Grid.Row="0" Grid.ColumnSpan="4" Margin="4,8,4,8" TextWrapping="NoWrap" VerticalContentAlignment="Center" Padding="4" Text="Path" />
        <TextBox x:Name="txt_Status" Grid.Row="1" Grid.Column="0" Margin="8,8,8,8" TextWrapping="NoWrap" VerticalContentAlignment="Center" Padding="4" Text="Status" />
        <Button x:Name="btn_Remove" Grid.Row="1" Grid.Column="1" Margin="4" Content="Remove" Click="btn_Remove_Click" />
        <Button x:Name="btn_Resume" Grid.Row="1" Grid.Column="2" Margin="4" Content="Resume" Click="btn_Resume_Click" />
        <Button x:Name="btn_Cache" Grid.Row="1" Grid.Column="3" Margin="4" Content="Cache" Click="btn_Cache_Click" />
    </Grid>
</UserControl>